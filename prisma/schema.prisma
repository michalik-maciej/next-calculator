// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum Category {
  back
  baseCover
  foot
  leg
  misc
  priceStrip
  shelf
  support
}

model Product {
  id       String   @id @default(uuid())
  category Category
  label    String
  price    Float
  depth    Int?
  height   Int?
  width    Int?
  Shelf    Shelf[]
  Stand    Stand[]
}

model Shelf {
  id      String  @id @default(cuid())
  shelfId String
  amount  Int
  product Product @relation(fields: [shelfId], references: [id])
  Stand   Stand?  @relation(fields: [standId], references: [id])
  standId String?

  @@index([shelfId], name: "idx_Shelf_Product")
}

model Stand {
  id      String  @id @default(cuid())
  amount  Int
  widthId String
  shelves Shelf[]
  product Product @relation(fields: [widthId], references: [id])

  @@index([widthId], name: "idx_Stand_Product")
}
